{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "apps/main/src",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": true,
		"tsConfigPath": "apps/main/tsconfig.app.json",
		"assets": [
			{
				"include": "../views",
				"watchAssets": true
			},
			{
				"include": "**/**/*.proto",
				"watchAssets": true
			},
			{
				"include": "libs/shared/src/i18n/translates/**/*",
				"watchAssets": true
			}
		],
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"dtoFileNameSuffix": [
						"*.dto.ts",
						"libs/common/src/modules/dto/*.dto.ts",
						".entity.ts",
						"libs/common/src/modules/**/**/*.entity.ts",
						".model.ts",
						".schema.ts"
					]
				}
			}
		]
	},
	"monorepo": true,
	"root": "apps/main",
	"projects": {
		"common": {
			"type": "library",
			"root": "libs/common",
			"entryFile": "index",
			"sourceRoot": "@app/common",
			"compilerOptions": {
				"tsConfigPath": "libs/common/tsconfig.lib.json"
			}
		},
		"shared": {
			"type": "library",
			"root": "libs/shared",
			"entryFile": "index",
			"sourceRoot": "libs/shared/src",
			"compilerOptions": {
				"tsConfigPath": "libs/shared/tsconfig.lib.json"
			}
		},
		"event-service": {
			"type": "application",
			"root": "apps/event-service",
			"entryFile": "main",
			"sourceRoot": "apps/event-service/src",
			"compilerOptions": {
				"tsConfigPath": "apps/event-service/tsconfig.app.json"
			}
		},
		"main": {
			"type": "application",
			"root": "apps/main",
			"entryFile": "main",
			"sourceRoot": "apps/main/src",
			"compilerOptions": {
				"tsConfigPath": "apps/main/tsconfig.app.json"
			}
		}
	}
}
